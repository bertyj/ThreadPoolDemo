<?xml version="1.0" encoding="utf-8"?>
<com.conti.jing.threadpooldemo.ProcessItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/progressbar_item_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

</com.conti.jing.threadpooldemo.ProcessItemView>
